{
    "cmake.configureArgs": [
        "--graphviz=dependency-graph/graph.dot"
    ],
    "editor.formatOnSave": true,
    "python.analysis.exclude": [
        "vendor/capstone",
        "vendor/cpython",
        "vendor/freetype",
        "vendor/glfw",
        "vendor/imgui",
        "vendor/nfd",
        "vendor/ppqsort",
        "vendor/sdl",
        "vendor/tracy",
        "vendor/zstd",
        "build"
    ],
    "flake8.args": [
        "--max-line-length=120",
        "--ignore=E203,E301,E302,E305,W503,E701,E704"
    ],
    "ruff.lineLength": 120,
    "cmake.debugConfig": {
        "args": [
            "test"
        ]
    },
    "C_Cpp.codeAnalysis.exclude": {
        "vendor/*": true,
        "build/*": true,
    },
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "C_Cpp.clang_format_style": "file",
}